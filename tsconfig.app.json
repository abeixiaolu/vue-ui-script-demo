{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/ui/icons": ["src/components/ui/icons/index.ts"],
      "@/ui/composables/*": ["src/components/ui/composables/*"],
      "@/ui/theme/*": ["src/components/ui/theme/*"],
      "@/ui/keys/*": ["src/components/ui/keys/*"],
      "@/ui/utils/*": ["src/components/ui/utils/*"],
      "@/ui/types/*": ["src/components/ui/types/*"],
      "@/ui/*": ["src/components/ui/components/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/components/ui/**/*.test.ts"]
}
